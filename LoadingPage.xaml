<?xml version="1.0" encoding="utf-8" ?>
<base:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:base="clr-namespace:BottomSheet"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BottomSheet.LoadingPage"
             Title="LoadingPage">
    <Grid>
        <VerticalStackLayout x:Name="pgRoot" VerticalOptions="Center" HorizontalOptions="Center" Spacing="7">
            <ActivityIndicator HeightRequest="30" WidthRequest="30" IsRunning="True" Color="Yellow" />
            <Label
            BackgroundColor="Yellow"
            Padding="10"
            Text="Loading..."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Grid>
</base:Popup>
