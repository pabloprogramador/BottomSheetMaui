<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      IsVisible="false"
             x:Class="BottomSheet.Components.Drawers.CustomDrawer">

    <ImageButton x:Name="pgBackground" BackgroundColor="Black" Opacity=".3" Clicked="pgBackground_Clicked"/>

    <Grid x:Name="pgBottomSheet">
        <Border x:Name="pgBottomSheetBorder" Stroke="White" BackgroundColor="White" StrokeShape="RoundRectangle 24,24,0,0" Padding="0,16">
        </Border>
        <Grid RowDefinitions="32,*">

            <Rectangle WidthRequest="40" HeightRequest="4" BackgroundColor="#E8E8E8"/>
            
            <ScrollView x:Name="pgContentScroll" Grid.Row="1" VerticalOptions="Start" BackgroundColor="Blue">
                <Grid Margin="16,0"  x:Name="pgContent" BackgroundColor="Yellow" />
            </ScrollView>


            <ImageButton BackgroundColor="Transparent"  HeightRequest="60" Clicked="ImageButton_Clicked">
                <ImageButton.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated"/>
                </ImageButton.GestureRecognizers>
            </ImageButton>

        </Grid>
    </Grid>

</Grid>

